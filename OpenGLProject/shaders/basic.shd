#shader Vertex
#version 330 core

layout(location = 0) in vec4 vertPos;
layout(location = 1) in vec3 vertColor;

out vec3 fragColor;

uniform float scale;

void main() {
	gl_Position = vec4(
		vertPos.x * scale, vertPos.y * scale, vertPos.z * scale, 1.0
	);
	fragColor = vertColor;
};


#shader Fragment
#version 330 core

in vec3 fragColor;
out vec4 color;

void main() {
	color = vec4(fragColor, 1.0);
};